# Variables for resource group, location, and other necessary inputs
variable "project_name" {
  description = "The project name"
  type        = string
}

variable "environment" {
  description = "The environment (e.g., dev, qa, prod)"
  type        = string
}

variable "resource_group_name" {
  description = "Name of the resource group"
  type        = string
}

variable "location" {
  description = "Azure region for the resources"
  type        = string
} 

variable "netapp_pool_size" {
  description = "Size of the NetApp pool in TB"
  type        = number
}

variable "netapp_pool_service_level" {
  description = "Service level for the NetApp pool"
  type        = string
}
