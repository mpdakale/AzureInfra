# Variables for resource group, location, and other necessary inputs
variable "project_name" {
  description = "The project name"
  type        = string
}

variable "environment" {
  description = "The environment (e.g., dev, qa, prod)"
  type        = string
}

variable "common_resource_group_name" {
  description = "The name of the common resource group where acr repos are created."
  type        = string
}

variable "location" {
  description = "The Azure location/region"
  type        = string
}

variable "resource_group_name" {
  description = "The name of the resource group"
  type        = string
}

variable "aks_subnet_id" {
  type        = string
}

variable "k8s_ssh_key" {
  type        = string
}

variable "app_gateway_id" {
  type        = string
}

variable "tags" {
  description = "Tags to apply to all resources"
  type        = map(string)
}